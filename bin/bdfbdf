#!/usr/bin/env fontforge
# -*- mode: python; coding: utf-8 -*-
import os, sys, argparse
libdir = os.path.dirname(os.path.realpath(__file__)) + '/../lib'
sys.path.append(libdir)
from bdf_parser import BDFParser
def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('filename')
    args = parser.parse_args()
    bdf_parser = BDFParser(filename=args.filename)
    print(str(bdf_parser.font))

    # bdfbdf compat:
    #   -x, --resolution-x, --res-x, --x-resolution, --x-res    int
    #   -y, --resolution-y, --res-y, --y-resolution, --y-res    int
    #   -f, --font-name, --ps-font-name                         str
    #   -m, --family-name                                       str
    #   -w, --weight-name                                       str
    #   -W, --setwidth-name                                     str
    #   -s, --style-name                                        str
    #   -F, --full-name                                         str
    #   -p, --property=name=value                               str
    #   --no-guess
    #   --guess-only
    #   --upper-case
    #   --lower-case
    #   --agl-names
    #   --dwidth-then-swidth
    #   --swidth-then-dwidth
    #   --verbose                                               incr
    #   --help

main()
